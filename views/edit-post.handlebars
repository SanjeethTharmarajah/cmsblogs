<!DOCTYPE html>
<html>
<head>
    <title>Edit Post - CMS Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <div class="container">
            <ul>
                <li><h1>Edit Post</h1></li>
                
            </ul>
        </div>
    </nav>
    <main>
         {{#each posts2}}
        <div class="container">
            
            <form method="post" action="/dashboard/edit-post/{{id}}" class="post-form">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="{{title}}" required>
                </div>
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea id="content" name="content" rows="6" required>{{content}}</textarea>
                </div>
                <button onclick="javascript: window.history.back()">Go Back</button>&nbsp;&nbsp;<button type="submit">Save Changes</button>
                
            </form>
        </div>
         {{/each}}
    </main>
</body>
</html>
